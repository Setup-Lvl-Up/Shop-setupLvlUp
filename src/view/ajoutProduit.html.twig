{% extends "baseAdmin.html.twig" %} {% block title %} {{ parent() }} Ajout de produit {% endblock %} {% block contenu %}{% if form.valide is defined %} {% if form.valide == true %}
<h1 class="text-success">Ajout réussi</h1>
<h3 class="text-success"><a href="index.php?page=admin-produit">Retourner sur la page produit</a></h3>
{% else %}
<h1 class="text-danger">Echec de l'ajout</h1>
<h2>Erreur : {{form.message}}</h2>
{% endif %}
<h3><a href="index.php?page=ajout-produit">Ajouter un autre produit</a></h3>
{% else %}
<div class="container">
    <div class="row">
        <div class="col">
            {% if form.valide is defined %} {% if form.valide == true %}
            <h1 class="text-sucess">Ajout Réussi</h1>
            {% else %}
            <h1 class="text-danger">Echec de l'ajout</h1>
            <h2>Erreur : {{form.message}}</h2>
            {% endif %} {% endif %}
            <form class="form-signin" action="index.php?page=ajout-produit" method="post" enctype="multipart/form-data">
                <h3>Ajouter de nouveau produit</h3>
                <label for="inputDesignation" class="sr-only">Nom du produit:</label>
                <input type="nom" id="inputDesignation" name="inputDesignation" class="form-control" placeholder="Nom" required autofocus>

                <label for="inputDescription" class="sr-only">description:</label>
                <input type="text" id="inputDescription" name="inputDescription" class="form-control" placeholder="description" required>

                <label for="inputPrix" class="sr-only">prix:</label>
                <input type="number" id="inputPrix" name="inputPrix" class="form-control" placeholder="prix" required>

                <label for="photo" class="sr-only">Photo :</label>
                <input type="file" name="photo" id="photo" class="form-control" />

                <label for="type" class="sr-only">Type :</label>
                <select class="form-select" name="type">
                    {% for r in listeT %}
                    <option value="{{ r.id }}">{{ r.libelle }}</option>
                    {% endfor %}
                </select>
                <button class="btn btn-lg mt-2 btn-primary btn-block" type="submit" name="btInserProduct">Ajouter</button>
            </form>
        </div>
    </div>
</div>
{% endif %}{% endblock %}