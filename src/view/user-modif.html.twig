<form class="form-signin" action="index.php?page=user-modif" method="post" enctype="application/x-www-form-urlencoded">
    <label for="inputEmail" class="sr-only">Email:</label>
    <input type="inputEmail" id="inputEmail" name="inputEmail" class="form-control" placeholder="Modifier votre mail">
    <label for="inputPassword" class="sr-only">Mot de passe à modifier: </label>
    <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="mot de passe">
