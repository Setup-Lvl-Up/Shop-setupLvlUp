    <label for="nom" class="sr-only">Nom:</label>
    <input type="nom" id="nom" name="nom" class="form-control" placeholder="Nom" value="{{ form.utilisateur.nom }}" required>
    <label for="prenom" class="sr-only">Prénom:</label>
    <input type="prenom" id="prenom" name="prenom" class="form-control" placeholder="Prénom" value="{{form.utilisateur.prenom}}" required>

    <label for="role" class="sr-only">role</label>
    <select class=" form-control " name="role">
        {% for r in form.roles %}
        {% if r.id==form.utilisateur.idRole %}
        <option value="{{ r.id }}" selected>{{ r.libelle }}</option>
        {% else %}
        <option value="{{ r.id }}">{{ r.libelle }}</option>
        {% endif %}
        {% endfor %}
    </select>
    <input type="hidden" name="id" value="{{ form.utilisateur.id}}" />

    <button class="btn btn-lg m-4 btn-primary btn-block" type="submit" name="btModifier">Modifier</button>
    <a role="button" class="btn btn-lg btn-danger btn-block" href="index.php?page=admin">Annuler</a>
