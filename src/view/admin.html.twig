{% extends "base.html.twig" %} {% block title %} {{ parent() }} Administration {% endblock %} {% block contenu %} {% if form.etat is defined %} {% if form.etat == true %}
<h1 class="h3 mb-3 font-weight-normal">Suppression réussie</h1>
{% else %}
<h1 class="alert alert-danger" role="alert">Problème d'insertion</h1>
{% endif %} {% endif %}
<div class="row">
    <div class="col">
        <h1>Administration</h1>
        <form class="form-signin" action="index.php?page=admin" method="post" enctype="application/x-www-form-urlencoded">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Email</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Rôle</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for u in liste %}
                        <tr>
                            <td>{{u.email}}</td>
                            <td>{{u.nom}}</td>
                            <td>{{u.prenom}}</td>
                            <td>{{u.libellerole}}</td>
                            <td>
                                <a role="button" class="btn btn-info btn-block" href="/index.php?page=user-modif&id={{ u.id }}"><i class="bi bi-pencil-square"></i></a>
                            </td>
                            <td>
                                <a role="button" class="btn btn-danger btn-block" href="/index.php?page=admin&id={{u.id}}"><i class="bi bi-trash"></i></a>
                            </td>
                            <td><input type="checkbox" name="cocher[]" id="cocher[]" value="{{u.id}}" /></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <button class="btn btn-lg btn-danger btn-block" type="submit" name="btSupprimer">Supprimer les personnes séléctionner</button>
        </form>
    </div>
</div>
{% endblock %}