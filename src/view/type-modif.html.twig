{% extends "base.html.twig" %} {% block title %} {{ parent() }} Modifier un type de produit {% endblock %} {% block contenu %}
<h1 class="h2 mb-3 mt-4 font-weight-normal">Modifier un type de produit</h1>
{% if form.type is defined %} {% if form.type != null %}
<form class="form-signin" action="index.php?page=modif-type" method="post" enctype="application/x-www-form-urlencoded">
    <label for="libelle" class="sr-only">Type {{ form.type.id}}:</label>
    <input type="type" id="libelle" name="libelle" class="form-control" placeholder="libelle" value="{{ form.type.libelle }}" required>
    <input type="hidden" name="id" value="{{ form.type.id}}" />

    <button class="btn btn-lg m-4 btn-primary btn-block" type="submit" name="btModifier">Modifier</button>

    <a role="button" class="btn btn-lg btn-danger btn-block" href="index.php?page=admin-type">Annuler</a>
</form>
{% else %}
<h2 class="alert alert-danger" role="alert">{{ form.message }}</h2>
<a href="index.php?page=admin-type">Retourner sur la liste des Type</a> {% endif %} {% else %} {% if form.valide == true %}
<h1 class="alert h3 mb-3 font-weight-normal">{{ form.message }} </h1>
<h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=admin-type">Retourner sur la liste des Type</a></h1>
{% else %}
<h1 class="alert alert-success alert-danger" role="alert">{{ form.message }}</h1>
<h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=admin-type">Retourner sur la liste des Type</a></h1>
{% endif %} {% endif %} {% endblock %}